        <a href="{{ potion.url }}" class="nav-href">{{ potion.title }}</a>
        <span class="nav-unfold"> </span>
        <span class="nav-fold"> </span>
    </div>
    {% if potion.has_child? %}
        <ul class="nav-menu">
            {% for potion in potion.children %}
                {% navigation-page %}
            {% endfor %}
        </ul>
    {% endif %}
